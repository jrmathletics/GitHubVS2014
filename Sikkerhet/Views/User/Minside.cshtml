@model Oblig1.DAL.Users
<br />
<br />
<br />

<head>
    <title>User</title>
   

</head>

<!-- Nav tabs -->
<ul class="nav nav-tabs" role="tablist">
    <li class="active"><a href="#home" role="tab" data-toggle="tab">Kontoinformasjon</a></li>
    <li><a href="#profile" role="tab" data-toggle="tab">Ordrehistorikk</a></li>
</ul>

<!-- Tab panes -->
<div class="tab-content">
    <div class="tab-pane active" id="home">
        <br />
        <br />

        <table class="table table-bordered">

            <div class="row">
                <div class="col-md-1">Fornavn:</div>
                <div class="col-md-3">@Model.Firstname</div>
            </div>
            <div class="row">
                <div class="col-md-1">Etternavn:</div>
                <div class="col-md-3">@Model.Surname</div>
            </div>
            <div class="row">
                <div class="col-md-1">Epost:</div>
                <div class="col-md-3">@Model.Email</div>
            </div>
            <div class="row">
                <div class="col-md-1">Adresse:</div>
                <div class="col-md-3">@Model.Address</div>
            </div>
            <div class="row">
                <div class="col-md-1">Passord:</div>
                <div class="col-md-3">******</div>
            </div>
            <div class="row">
                <div class="col-md-1">Telefon:</div>
                <div class="col-md-3">@Model.Phonenr</div>
            </div>
            <div class="row">
                <div class="col-md-1">Postnr:</div>
                <div class="col-md-3">@Model.Postcode</div>
            </div>
        </table>

    </div>
    <a href="@Url.Action("EditUser", "User", new { email = @Model.Email })" class="btn btn-success ">Endre</a>
    <div class="tab-pane" id="profile">Ordrehistorikk</div>
    <div class="tab-pane" id="messages">...</div>
    <div class="tab-pane" id="settings">...</div>
</div>